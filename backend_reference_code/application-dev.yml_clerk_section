# Clerk Configuration
# Add this to your existing application-dev.yml file

clerk:
  # REST API URL (for backend API calls like user management)
  api-url: ${CLERK_API_URL:https://api.clerk.com/v1}

  # Secret Key (for backend authentication)
  secret-key: ${CLERK_SECRET_KEY:your_clerk_secret_key}

  # Publishable Key (for frontend)
  publishable-key: ${CLERK_PUBLISHABLE_KEY:your_clerk_publishable_key}

  # Frontend API URL (for OAuth and user-facing operations) - NEW
  frontend-api: ${CLERK_FRONTEND_API:https://humble-monkey-3.clerk.accounts.dev}

# Notes:
# - The Frontend API URL is used for OAuth authorization redirects
# - This is different from the REST API URL which is used for backend API calls
# - Your Frontend API URL is: https://humble-monkey-3.clerk.accounts.dev
# - You can find this in your Clerk Dashboard under API Keys â†’ Frontend API
